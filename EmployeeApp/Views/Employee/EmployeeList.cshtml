@model IList<Employee>

@{
    ViewBag.Title = "EmployeeList";
}


<input  type="hidden" id="employee-id" value=""/>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2>Employees List</h2>
        </div>
        <div class="col-md-12">
            <a class="btn btn-primary pull-right" onclick="employeeEditorApp.openEmployeeEditorModel()">
                Add Employee
            </a>
        </div>
        <div class="col-md-12" style="margin-top: 15px">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Employee Name</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Address</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tbody-employees-list">
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (Employee employee in Model)
                        {
                            @Html.Partial("_EmployeeListItem", employee)
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="employees-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Employee Editor</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="patient-modal-body">
                <form>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="empName">Employee Name</label>
                                <input type="text" class="form-control" id="employee-name" aria-describedby="empName" placeholder="Enter name">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="empAge">Age</label>
                                <input type="number" class="form-control" id="employee-age" aria-describedby="empAge" placeholder="Enter Age">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="empGender">Gender</label>
                                <input type="text" class="form-control" id="employee-gender" aria-describedby="empGender" placeholder="Enter Gender">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="empAddress">Address</label>
                                <textarea id="employee-address" class="form-control" rows="3">
                                </textarea>
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-primary" onclick="employeeEditorApp.saveEmployeeDetails()" id="lnkSubmitDetails">Submit </a>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Employee/EmployeeEditor.js"></script>